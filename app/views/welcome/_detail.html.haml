- if advent_calendar_item.present?
  %p.text-info.advent-calendar-author
    = advent_calendar_item.user_name + t("views.courtesy_title")
  - if advent_calendar_item.published?
    %p.text-info.advent-calendar-entry
      - items_count = advent_calendar_item.item.comments.count
      - if items_count > 0
        - items_title = "#{advent_calendar_item.item.title} (#{items_count})"
      - else
        - items_title = advent_calendar_item.item.title
      = link_to items_title, item_path(advent_calendar_item.item.id)
  - else
    %p.advent-calendar-entry
      = advent_calendar_item.comment
    %p.advent-calendar-join
      = link_to t("views.welcome._detail.button_edit"),
        advent_calendar_item_path(id:advent_calendar_item.id),
        class:"btn btn-default btn-block btn-xs"
- else
  %div.advent-calendar-join
    = link_to t("views.welcome._detail.button_create"),
      new_advent_calendar_item_path(date: date),
      class: "btn btn-success btn-block"
